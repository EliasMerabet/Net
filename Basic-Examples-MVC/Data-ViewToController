CONTROLLER.
        public ActionResult VistaPost()
        {
            return View();
        }


        [HttpPost]
        public ActionResult VistaPost(Coche c)
        {
            ViewBag.Marca = c.Marca;
            ViewBag.Modelo = c.Modelo;
            return View();
        }
